{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["frontend/**/*.ts", "backend/**/*.ts", "frontend/src/pages/login.page.tsx", "frontend/src/pages/signup.page.tsx"],
  "exclude": ["node_modules", ".vscode"]
}